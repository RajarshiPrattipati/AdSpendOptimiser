# Production Environment Variables Template
# Copy these to your Netlify Environment Variables settings
# Site Settings > Build & deploy > Environment > Environment variables

# ============================================================================
# DATABASE - Supabase PostgreSQL
# ============================================================================
# IMPORTANT: Include connection parameters for Supabase free tier reliability
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:5432/postgres?connection_limit=1&connect_timeout=30&pool_timeout=30"
DIRECT_DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:5432/postgres?connection_limit=1&connect_timeout=30&pool_timeout=30"

# ============================================================================
# GOOGLE OAUTH
# ============================================================================
GOOGLE_CLIENT_ID="YOUR_CLIENT_ID.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="YOUR_CLIENT_SECRET"
# Update this to your actual Netlify domain
GOOGLE_REDIRECT_URI="https://your-site.netlify.app/api/auth/callback"

# ============================================================================
# GOOGLE ADS API
# ============================================================================
# Get your developer token from: https://ads.google.com/aw/apicenter
GOOGLE_ADS_DEVELOPER_TOKEN="YOUR_DEVELOPER_TOKEN"

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
# Generate a secure random string for production (minimum 32 characters)
# Use: openssl rand -base64 32
JWT_SECRET="YOUR_SECURE_RANDOM_STRING_MINIMUM_32_CHARACTERS"

# ============================================================================
# APPLICATION URL
# ============================================================================
# Your production Netlify URL
NEXT_PUBLIC_APP_URL="https://your-site.netlify.app"
